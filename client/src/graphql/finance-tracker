import { gql } from '@apollo/client';

export const GET_DASHBOARD = gql`
    query GetDashboard{
        dashboard{
            totalBalance
            monthlyIncome
            monthlyExpenses
            categorySummary{
                category
                total
                count
                percentage
            }
            monthlyStats{
                month
                income
                expenses
                balance
            }
            recentTransactions{
                id
                category
                amount
                type
                description
                date
            }
        }
    }
`;

export const ADD_TRANSACTION = gql`
  mutation AddTransaction($amount: Float!, $description: String!, $type: TransactionType!, $category: String!) {
    addTransaction(amount: $amount, description: $description, type: $type, category: $category) {
      id
      amount
      category
      description
      date
      type
    }
  }
`;

export const UPDATE_TRANSACTION = gql`
  mutation UpdateTransaction($id: ID!, $amount: Float, $description: String, $type: TransactionType, $category: String, $date: Date) {
    updateTransaction(id: $id, amount: $amount, description: $description, type: $type, category: $category, date: $date) {
      id
      amount
      category
      description
      date
      type
    }
  }
`;

export const DELETE_TRANSACTION = gql`
  mutation DeleteTransaction($id: ID!) {
    deleteTransaction(id: $id)
  }
`;